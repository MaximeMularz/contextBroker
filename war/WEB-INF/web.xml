<?xml version="1.0" encoding="UTF-8" standalone="no"?><web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee                 http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
 	
	<servlet>
		<servlet-name>QueryContext</servlet-name>
		<servlet-class>com.contextBrokerProxy.QueryContextServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>QueryContext</servlet-name>
		<url-pattern>/queryContext</url-pattern>
	</servlet-mapping>
	 	
	<servlet>
		<servlet-name>UpdateContext</servlet-name>
		<servlet-class>com.contextBrokerProxy.UpdateContextServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>UpdateContext</servlet-name>
		<url-pattern>/updateContext</url-pattern>
	</servlet-mapping>

	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
	
</web-app>